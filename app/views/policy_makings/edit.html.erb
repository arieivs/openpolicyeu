<h1>Edit <%= @policy_making.topic.name %> Policymaking in <%= @policy_making.country.name %></h1>

<h2>How does it work?</h2>

<%= simple_form_for @policy_making do |f| %>
  <%= f.input :content, as: :text, label: "Description", required: true, :input_html => { :cols => 5, :rows => 10 } %>
  <!-- Number of characters (min/max) for "conntent" to be implemented later -->
  <%= f.input :video_url, label: "Video URL", required: false %>
  <%= f.input :video_alt_text, label: "Video short description", required: false %>
  <!-- Number of characters (min/max) for "video_alt_text" to be implemented later -->
  <%= f.input :video_source, label: "Whoâ€™s the creator/holds the rights to the video?", required: false %>
  <%= f.input :ambassador_id, required: false, collection: Ambassador.all %>

  <div class="btn-container"><%= f.button :submit, "SAVE", class: 'btn-all btn-yllw' %></div>
<% end %>


