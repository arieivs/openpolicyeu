<div class="card-all my-3">
  <div class="px-4">
    <h3><mark class="mark-blue"><%= pmi.institution.name %></mark></h3>
    <p><%= pmi.description %></p>
    <%= link_to edit_policy_making_institution_path(pmi), remote: true do %>
      <button class='btn-all btn-sec'>EDIT</button>
    <% end %>
    <%= link_to policy_making_institution_path(pmi),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this Institution?" },
        remote: true do %>
      <button class='btn-all btn-sec'>REMOVE</button>
    <% end %>
  </div>
</div>
