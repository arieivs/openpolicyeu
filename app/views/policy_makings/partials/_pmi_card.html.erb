<div class="card-all my-3">
  <div class="px-4">
    <h3><strong><%= pmi.institution.name %></strong></h3>
    <p><%= pmi.description %></p>
    <%= link_to edit_policy_making_institution_path(pmi), class: 'btn-link', remote: true do %>
      <button class='btn-all btn-sec mr-3'>EDIT</button>
    <% end %>
    <%= link_to policy_making_institution_path(pmi),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this Institution?" },
        remote: true do %>
      <button class='btn-all btn-sec'>REMOVE</button>
    <% end %>
  </div>
</div>
