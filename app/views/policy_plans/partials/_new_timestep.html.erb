<%= simple_form_for ([policy_plan, new_timestep]), remote: true do |f| %>
  <%= f.input :date, required: true %>
  <%= f.input :name, required: true %>
  <%= f.input :description, as: :text, label: "Description", required: true, :input_html => { :cols => 5, :rows => 5 } %>
  <%= f.button :submit, "Save", class: 'btn-all btn-prim' %>
<% end %>
