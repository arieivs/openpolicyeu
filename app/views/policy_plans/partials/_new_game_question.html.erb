<%= simple_form_for [policy_plan, new_game_question], remote: true do |f| %>
  <% if policy_plan.goals %>
    <%= f.input :order, as: :hidden, input_html: { value: new_game_question_order}  %>
  <% else %>
    <%= f.input :date, required: true %>
  <% end %>
  <%= f.input :name, required: true %>
  <%= f.input :context, as: :text, :input_html => { :cols => 5, :rows => 5 } %>
  <%= f.input :question, as: :text, :input_html => { :cols => 5, :rows => 5 } %>
  <%= f.button :submit, "SAVE", class: 'btn-all btn-prim' %>
<% end %>
