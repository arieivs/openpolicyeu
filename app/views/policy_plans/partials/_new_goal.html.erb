<%= simple_form_for [policy_plan, new_goal], remote: true do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :description, as: :text, required: true, :input_html => { :cols => 5, :rows => 5 } %>
  <%= f.input :order, as: :hidden, input_html: { value: new_goal_order}  %>
  <%= f.button :submit, "SAVE", class: 'btn-all btn-prim' %>
<% end %>
