<%= simple_form_for policy_plan, remote: true do |f| %>
  <div class="pm-form">
    <%= f.input :policy_making_id, label: "Policymaking", required: true, collection: policy_makings %>
  </div>
  <%= f.input :name, required: true %>
  <%= f.input :short_description, as: :text, label: "Short description", required: true, :input_html => { :cols => 5, :rows => 2 } %>
  <%= f.input :content, as: :text, label: "Description", required: true, :input_html => { :cols => 5, :rows => 5 } %>
  <!-- Number of characters (min/max) for "content" to be implemented later -->
  <%= f.input :video_url, label: "Video URL", hint: "If it's an Youtube video, make sure to change \"watch?v=\" into \"embed/\"", required: false %>
  <%= f.input :video_alt_text, label: "Video short description", required: false %>
  <!-- Number of characters (min/max) for "video_alt_text" to be implemented later -->
  <%= f.input :video_source, label: "Whoâ€™s the creator/holds the rights to the video?", required: false %>
  <!-- Ambassador to be added once we have ambassadors -->
  <% if policy_plan.id.nil? %>
    <p>Will you add a timeline or goals? *</p>
    <p>
      <%= f.radio_button :goals, false, required: true %> Timeline &ensp; &ensp;
      <%= f.radio_button :goals, true, required: true %> Goals
    </p>
  <% end %>
  <%= f.button :submit, "Save", class: 'btn-all btn-prim' %>
<% end %>
